@import url('https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.3/css/bootstrap.min.css')
@import url('https://fonts.googleapis.com/css?family=Lato:300,400,700,900')
@import url('https://fonts.googleapis.com/css?family=Open+Sans:300,400')
@import url('https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css')

space = #2c3e50
spacial = #6b7c93
Facebook = #3A5999
bluef = rgba(0,248,255,1)

html
  height 100% !important
body
  height 100% !important
#root 
  height 100% !important
.main 
  height 100% !important
Header
  background url('http://s3.amazonaws.com/chewiekie/img/devc-bg.png') center center no-repeat 
  background-size cover
  min-height 100% 
  min-width: 100%
  z-index -9999
  .content
    padding-top 25px
    color white
    .nav
      a
        color white
        transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
        text-transform uppercase
        font-weight 200
        letter-spacing 1.1px
        font-size 13px
        &:hover           
          transform scale(1.1)
          color rgba(white,0.8) 
  .hero
    font-family 'Lato', sans-serif
    color white
    text-align: center
    img 
      margin-top 24vh
      width: 600px
    h2
      margin-top 40px
      font-size 48px
      font-weight 300
    p 
      font-size 19px
      font-weight 200 
      margin 5px 0px 30px 0px
    .btn-rsvp
      background-color white
      cursor pointer
      padding 20px 45px 
      border 1px solid white
      color black
      font-weight 200
      text-transform uppercase
      font-size 12px
      font-weight 600
      border-radius 30px
      letter-spacing 1.5px
      transition all 0.6s cubic-bezier(0.165, 0.84, 0.44, 1)
      box-shadow 0 1px 2px 0 rgba(0,0,0,0.03)
      outline none
      &:hover 
        background-color rgba(white,0.8)
        transform scale(1.03)
        color rgba(black,0.8)
        text-decoration: none
  .arrows
    width: 60px;
    height: 72px;
    position: absolute;
    left: 50%;
    margin-left: -30px;
    bottom: 20px;
  .arrows path
    stroke: white;
    fill: transparent;
    stroke-width: 1px;  
    animation: arrow 2s infinite;
    -webkit-animation: arrow 2s infinite; 
  @keyframes arrow
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}
  @-webkit-keyframes arrow
    0% {opacity:0}
    40% {opacity:1}
    80% {opacity:0}
    100% {opacity:0}
  .arrows path.a1
    animation-delay -1s
    -webkit-animation-delay -1s
  .arrows path.a2
    animation-delay:-0.5s
    -webkit-animation-delay:-0.5s 
  .arrows path.a3
    animation-delay 0s
    -webkit-animation-delay 0s 
